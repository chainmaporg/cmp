<script type="text/javascript">
    function getvaluesToPostChallenge() {
        var url = "/postChallenge";
        var ChallengeHeader = $("#question-title").val();
        var ChallengeQuestion = $("#question-details").val();
        var category = $("#category").val();
        var level = $("#level").val();
        $.ajax({
            type: 'POST',
            url: url,
            data: {
                ChallengeHeader: ChallengeHeader,
                ChallengeQuestion: ChallengeQuestion,
                category: category,
                level: level
            },
            async: false,
            success: function (data) {
                alert(data)
                window.location.href = "/questionBoard";
            },
            error: function () {
                alert('Error occured');
            }
        });
    }
</script>



